<idea-plugin>
    <id>com.tym.AssetsHelper</id>
    <name>AssetsHelper</name>
    <vendor>power by TangXiaoTian</vendor>
    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.lang</depends>
    <!--    <depends>com.intellij.modules.java</depends>-->
    <depends>com.intellij.modules.all</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>io.flutter</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.crzsc.plugin.setting.PluginSetting"/>
        <applicationConfigurable parentId="tools" instance="com.crzsc.plugin.setting.AppSettingsConfigurable"
                                 id="com.crzsc.plugin.setting.AppSettingsConfigurable"
                                 displayName="AssetsHelper"/>
        <!--        行标记-->
        <codeInsight.lineMarkerProvider language="Dart"
                                        implementationClass="com.crzsc.plugin.provider.AssetsLineMarkerProvider"/>
        <postStartupActivity  implementation="com.crzsc.plugin.listener.MapModificationListener"/>

<!--        <projectConfigurable-->
<!--                groupId="editor"-->
<!--                instance="andrasferenczi.configuration.DataClassConfigurable"/>-->
        <checkinHandlerFactory implementation="com.crzsc.plugin.git.LineFeedCheckinHandlerFactory"/>

    </extensions>

    <applicationListeners>
        <listener class="com.crzsc.plugin.listener.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>

    </applicationListeners>

    <actions>
        <!-- Add your actions here -->
        <action id="action.generate" class="com.crzsc.plugin.actions.GenerateAction" text="Generate Assets Index"
                description="Generate assets index">
            <add-to-group group-id="BuildMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt g"/>
        </action>
